<%
const conf = bot.getGuildSettings(guild);
const guildChannels = guild.channels.array();
guildChannels.filter(channel => channel.type.toLowerCase() === 'text');
const nickname = guild.me.nickname !== null && guild.me.nickname !== "" ? guild.me.nickname : bot.user.username;
const help = {};
bot.commands.forEach((command) => {
  if (command.conf.hidden === true || command.conf.enabled !== true) return;
  const cat = command.help.category;
  if (!help.hasOwnProperty(cat)) help[cat] = [];
  help[cat].push(command);
});
%>

<div id="Bot Settings" class="tabcontent col-sm-9">
  <div class="ui inverted input">
    <a class="floating ui red label">Nickname</a>
    <input type="text" value="<%= nickname %>" class="changeNick" id="nickname" placeholder="Nickname">
  </div>
  <div class="ui inverted divider"></div>
  <div class="ui inverted input">
    <a class="floating ui blue label">Prefix</a>
    <input type="text" value="<%= conf.prefix %>" class="changePrefix" id="prefix" placeholder="Prefix">
  </div>
  <br>
  <div class="ui inverted divider"></div>
  <button id="leaveButton" class="modal-trigger ui inverted red small button white-text" href="#serverLeaveModal"><i class="fas fa-sign-out-alt"></i>Leave Server</button>
</div>

<% for (const category in help) { %>
<% if (help[category].length === 0) return; %>
<div class="tabcontent col-sm-9" id="<%= category %>">
  <div class="ui three cards">
    <% for (const command of help[category]) { %>
    <div class="ui raised card">
    <div class="content">
      <div class="header"><%= command.help.name %></div>
      <div class="meta"><% if (conf.prefix != null || conf.prefix != '') { %><%= conf.prefix %><% } else { %><%= bot.config.prefix %><% } %><%= command.help.usage %></div>
      <div class="description">
        <%= command.help.description %>
      </div>
    </div>
      <div class="extra content">
      <div class="ui one buttons">
      <div class="ui small basic <% if (conf.disabledCommands.indexOf(command.help.name) < 0) { %> red <% } else { %> green <% } %> button disableCommand" data-command="<%= command.help.name %>">
      <% if (conf.disabledCommands.indexOf(command.help.name) < 0) { %>
        <i class="remove icon"></i>
        Disable Command
      <% } else { %>
        <i class="plus icon"></i>
        Enable Command
      <% } %>
      </div>
      </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<% } %>

<div class="tabcontent col-sm-9" id="Events">
  <div class="section container">
    <a class="ui blue ribbon label">Member Join</a>
    <div class="checkAndSelect" style="margin-top: 20px;">
    <label for="welcomeMembers">
      <input type="checkbox" class="filled-in eventCheckbox" <% if (conf.welcomeMembers === "true") { %> checked <% } %> id="welcomeMembers" data-selectid="welcomeChannel" name="Welcome Members" />
      <span>Enable Welcome Message</span>
    </label>
    <br>
    <label>Welcome Channel</label>
    <select class="browser-default announcementChannelSelect" id="welcomeChannel">
      <% for (let i = 0; i < guildChannels.length; i++) { %>
      <% if (guildChannels[i].name == conf.welcomeChannel) { %>
      <option value="<%= conf.welcomeChannel %>" selected><%= conf.welcomeChannel %></option>
      <% } else { %>
      <option value="<%= guildChannels[i].name %>"><%= guildChannels[i].name %></option>
      <% } %>
      <% } %>
    </select>
   </div>
</div>
  
  <br>
  
  <div class="ui inverted divider"></div>
  
  <div class="container section">
    <a class="ui red ribbon label">Member Leave</a>
    <div class="checkAndSelect" style="margin-top: 20px;">
